@model WebApplication1.ViewModels.ViewUsersVM

@{
    ViewData["Title"] = "ViewUsers";
}

<h1>User List</h1>
<a asp-controller="Users" asp-action="CreateUser" class="btn btn-primary">
    Create New User
</a>

@if (@Model?.Users == null || !@Model.Users.Any())
{
    <p>Brak użytkowników</p>
}
else
{
    <table class="'table table-bordered table-striped" style="width:100%">
       <thead>
          <tr>
             <th>
                Id
             </th>
             <th>
                Name
             </th>
             <th>
                Email
             </th>
             <th></th>
          </tr>
       </thead>
       <tbody>
          @foreach (var user in Model.Users)
          {
              <tr>
                  <td>@user.Id</td>
                 <td width="50%">
                    @user.Name
                 </td>
                 <td width="30%">
                    @user.Email
                 </td>
                 <td>
                    <div class="w-75 btnbtn-group" role="group">
                       <a asp-controller="Users" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                       <a asp-controller="Users" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </div>
                 </td>
              </tr>
          } 
       </tbody>
    </table>
}
